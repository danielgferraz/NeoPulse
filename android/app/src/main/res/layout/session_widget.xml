<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#000000">

        <TextView
            android:id="@+id/session_exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEOPULSE"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/session_sets_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEM SESSÃO"
            android:textColor="#00FF41"
            android:textSize="10sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <Chronometer
            android:id="@+id/session_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/session_next_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRÓXIMO: ---"
            android:textColor="#888888"
            android:textSize="9sp"
            android:textStyle="italic"
            android:maxLines="1"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/session_btn_reset"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:background="@android:color/darker_gray"
                android:text="ZERAR"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/session_btn_pause"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="2dp"
                android:background="#00FF41"
                android:text="PAUSAR"
                android:textColor="#000000"
                android:textSize="10sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/session_btn_next"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:background="#222222"
                android:text="FEITO"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:gravity="center"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
